            bottom: 25px;
        }

        .tr {
            display: table-row;
            vertical-align: inherit;
            border-color: inherit;
        }

        /* .option_product{
            border-top: 1px solid #e5e5e5;
        } */

        .op_product {
            position: relative;
            padding: 15px 10px 0px 15px;
            font-weight: bold;
            line-height: 21px;
            font-size: 13px;
            /* width: 100px; */
            /* right: 135px; */
            /* float: left; */
        }

        .op_border {
            border-top: 1px solid #e5e5e5;
        }

        .op_border span {
            display: inline-block;
            position: relative;
            right: -15px;
            color: #919191;
            font-size: 11px;
        }

        .label {
            display: inline-block;
            color: #919191;
            font-size: 11px;
        }

        .count {
            position: relative;
            top: -35px;
            left: 250px;
        }

        input[type=text] {
            width: 15px;
            height: 15px;
            text-align: center;
        }

        .count button {
            background: #ccc;
            border: none;
            box-sizing: border-box;
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        .box {
            width: 15px;
            height: 15px;
            float: right;
            position: relative;
            top: -55px;
            right: 10px;
            padding: 0;
            text-align: center;
            font-size: 12px;
            font-weight: bold;
            border: none;
            cursor: pointer;
            background-color: white;
        }

        .order_btn {
            width: 150px;
            height: 40px;
            border-radius: 2px;
            border: 1px solid #333333;
            background: #333333;
            font-weight: bold;
            text-align: center;
            /* position: relative; */
            /* top: 150px;
            left: 100px; */
            cursor: pointer;
            color: white;
        }

        .or_btn {
            margin-top: 160px;
            margin-left: 120px;
        }
    </style>
</head>

<body>

<div class="option_title">
    - 옵션 선택 -
</div>
{{#paymentPopup}}
    <div class="img">
        <img src="/img/BOTTOM/{{productImg}}">
    </div>

    <div class="img_option">
        <div class="product_name">
            {{productName}}
        </div>

        <div class="option_text2">
            사이즈
        </div>

        <select class="option_select2" name="size_select" id="size_select">
            <option>[필수] 옵션을 선택해주세요.</option>
            <option>S</option>
            <option>M</option>
            <option>L</option>
        </select>
    </div>

    <div class="option_all">
    <tr class="option_product">
        <td>
            <div class="op_border">
                <input type="hidden" class="option_box">
                <p class="op_product">
                    {{productName}}
                </p>
                <span>- {{productColor}}</span>
                <p class="label" id="label"> <span></span></p>
            </div>
        </td>
        <td>
            <div class="count">
                    <span>
                        <button class="minus_btn">-</button>
                        <input type="text" class="quantity_input" value="1">
                        <button class="plus_btn">+</button>
                    </span>
            </div>
        </td>
        <td>
            <button class="box" onclick="none()">
                x
            </button>
        </td>
{{/paymentPopup}}
</tr>
</div>

<div class="or_btn">
    <input type="button" id="cart_btn" class="order_btn" value="구매하기" onclick="moveClose();" />
</div>

<script>
    function moveClose() {
        opener.location.href = "order_payment.html"
        self.close();
    }

    function none() {
        document.querySelector(".option_all").style.display = "none";
    }

    function moveClose() {
        opener.location.href = "order_payment.html"
        self.close();
    }

    let quantity = $(".quantity_input").val();

    $(".plus_btn").on("click", function () {
        $(".quantity_input").val(++quantity);
    });

    $(".minus_btn").on("click", function () {
        if (quantity > 1) {
            $(".quantity_input").val(--quantity);
        }
    });


    let select = document.getElementById('size_select');


    select.addEventListener('change', function () {
        document.getElementById('label').children[0].innerHTML = select.options[select.selectedIndex].label;
    })

</script>

</body>

</html>